<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

        
	<RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
                <ImageView
                    android:id="@+id/font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/play"
                    android:scaleType="fitCenter"
                    android:src="@drawable/player_prev_highlight" />

                <ImageView
                    android:id="@+id/play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/next"
                    android:scaleType="fitCenter"
                    android:src="@drawable/player_pause_highlight" />

                <ImageView
                    android:id="@+id/next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/player_next_highlight" />
        </RelativeLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:orientation="vertical" >
        
        <GridView
            android:id="@+id/gridword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="auto_fit" 
            android:gravity="center"
            android:horizontalSpacing="2dp"
            android:verticalSpacing="2dp" 		
            android:columnWidth="75dp"  
    			android:stretchMode="columnWidth"  
    		/>
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="start"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/text_word"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start" />

                <TextView
                    android:id="@+id/text_pronounce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start" />                

            </LinearLayout>

            <TextView
                android:id="@+id/text_translation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start" />

            <TextView
                android:id="@+id/text_tense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start" />

            <TextView
                android:id="@+id/text_sentence1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start" />

            <TextView
                android:id="@+id/text_sentence2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start" />

            <TextView
                android:id="@+id/text_sentence3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start" />

            <TextView
                android:id="@+id/text_sentence4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start" />

            <TextView
                android:id="@+id/text_sentence5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>